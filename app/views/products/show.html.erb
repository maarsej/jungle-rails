<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user? %>
    <div class="row">
      <div class="col-sm-4">
      <h2>Leave a Review</h2>
        <div class="well">
        <%= form_for [@product, Review.new], url: product_reviews_path(@product.id) do |f| %>
          <div>Description: <%= f.text_field :description %></div> </br>
          <div>Rating: <%= f.select :rating, [1, 2, 3, 4, 5] %></div> </br>
          <div><%= f.submit "Submit" %></div>
        <% end %>
        </div>
      </div>
    </div>
    <% else %>
    <% end %>


    <div class="row">
      <h2>Reviews</h2>
      <hr>
      <div><%= render partial: "review", collection: @product.reviews.order('created_at desc') %></div>
    </div>

  </article>

</section>
